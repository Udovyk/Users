<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:visibility="gone">

        <ImageView
                android:id="@+id/imDetailAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[6]"/>

        <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imDetailAvatar"
                tools:text="Name"/>

        <TextView
                android:id="@+id/labelGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:text="@string/gender"
                android:textSize="15sp"
                android:textColor="@color/colorGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailName"/>

        <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/labelGender"
                app:layout_constraintTop_toBottomOf="@+id/labelGender"
                tools:text="Male"/>

        <TextView
                android:id="@+id/labelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorGrey"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/labelGender"
                app:layout_constraintTop_toBottomOf="@+id/tvGender"
                android:text="@string/date_of_birth"/>

        <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/labelGender"
                app:layout_constraintTop_toBottomOf="@+id/labelDate"
                tools:text="2000-01-01"/>

        <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/labelGender"
                android:text="@string/phone" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDate"/>

        <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/labelGender"
                app:layout_constraintTop_toBottomOf="@+id/labelPhone"
                tools:text="+3800000000000"/>
        <TextView
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelAddress" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPhone" app:layout_constraintStart_toStartOf="@+id/tvPhone"
        />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAddress"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                tools:text="st. Linkoln 25"
                app:layout_constraintStart_toStartOf="@+id/labelAddress"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/labelAddress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
